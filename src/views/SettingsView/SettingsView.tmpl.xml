<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="default__container__with-navbar">
        <div class="profile-form" onsubmit="return false">
            <div class="navigation">
                <div class="navigation__element_active" id="profileLink">Профиль</div>
                <!--<div class="navigation__element">Внешний вид</div>-->
                <span class="navigation__element" id="accountsLink" style="display: none">Аккаунты</span>
                <span class="navigation__element" id="securityLink">Безопасность</span>
                <!--<a class="navigation__element">Уведомления</a>-->
            </div>

            <div style="display: flex; position: relative; width: 100%; height: 100%;">
                <img class="close" data-href="/" src="../../img/icons/close.svg" alt="close"/>

                <div class="adaptive-navigation">
                    <input id="navigation__toggle" type="checkbox" />
                    <label class="adaptive-navigation__button" for="navigation__toggle">
                        <span/>
                    </label>

                    <div class="adaptive-navigation__container">
                        <div class="adaptive-navigation__element adaptive-navigation__element_active" id="profileLinkAdaptive">
                            Профиль
                        </div>

<!--                        <div class="adaptive-navigation__element">-->
<!--                            Аккаунты-->
<!--                        </div>-->

                        <div class="adaptive-navigation__element" id="securityLinkAdaptive">
                            Безопасность
                        </div>
                    </div>
                </div>

                <div class="settings-body" id="settingsBody"/>
            </div>
        </div>
    </div>
</fest:template>
