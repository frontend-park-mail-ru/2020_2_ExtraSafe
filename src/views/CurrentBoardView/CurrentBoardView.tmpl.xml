<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="board-info">
        <div class="board-info-left-side">
            <div class="board-info-left-side-name-favorite">

                <div class="board-info-left-side-name-favorite__board-name" id="boardName">
                    <fest:attributes>
                        <fest:if test="json.isAdmin">
                            <fest:attribute name="contenteditable" value="true"/>
                        </fest:if>
                    </fest:attributes>
                    <fest:value>json.boardName</fest:value>
                </div>

<!--                <img class="board-info__left-side__name-favorite__favorite__icon" src="../../img/icons/favorite.svg" alt="favorite"/>-->
            </div>

            <div class="board-info-left-side-collaborators">
                <fest:for iterate="json.boardMembers" index="i" value="v">
                    <img class="board-info-left-side-collaborator" src="{v.memberAvatarSrc}" id="{v.memberBoardHtmlID}" alt="collaborator"/>
                </fest:for>
                    <img class="board-info-left-side-collaborator" src="../../img/icons/members_dots.svg"
                         id="addMember" title="Управление участниками" alt="add-collaborator">
                        <fest:attributes>
                            <fest:if test="json.isAdmin">
                                <fest:attribute name="style" value="display: flex;"/>
                            </fest:if>
                            <fest:attribute name="style" value="display: none;"/>
                        </fest:attributes>
                    </img>
                <div class="add-collaborator" id="membersPopup"/>
            </div>
        </div>

        <div class="board-info-right-side">
            <img class="board-info-right-side__settings-icon" id="boardSettings" title="Удалить доску" alt="settings">
                <fest:attributes>
                    <fest:if test="json.isAdmin">
                        <fest:attribute name="src" value="../../img/icons/bin.svg"/>
                    </fest:if>
                    <fest:attribute name="src" value="../../img/icons/exit.svg"/>
                </fest:attributes>
            </img>
        </div>

    </div>

    <div class="scroll-cards-container">

        <div class="cards" id="cardsDiv"/>

        <div class="new-card">
            <div class="new-card-content">
                <div class="new-card-title" id="addCardButton">
                    <img class="new-card-title__add-new-icon" src="../../img/icons/add_white.svg" alt="add"/>

                    <div class="new-card-title__text">
                        Добавить колонку
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="edit-task" id="taskDetailed"/>
</fest:template>
