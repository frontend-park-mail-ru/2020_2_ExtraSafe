<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="board" id="{json.boardHtmlID}">
        <div class="board-name">
            <div class="board-name__text">
                <fest:value>json.boardName</fest:value>
            </div>
        </div>

        <div class="board-description">
            <div class="board-description__text">
                <fest:value>json.boardDescription</fest:value>
            </div>
        </div>
    </div>
</fest:template>
