<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="edit-task-content">
        <div class="edit-task-content-name">
            <div class="edit-task-content-name__text" id="popupBoardName" contenteditable="true">
                <fest:attributes>
                    <fest:if test="json.boardName">
                        <fest:attribute name="data-placeholder">
                            <fest:value>json.boardName</fest:value>
                        </fest:attribute>
                    </fest:if>
                    <fest:attribute name="data-placeholder">
                        Введите название доски
                    </fest:attribute>
                </fest:attributes>
            </div>
            <img class="edit-task-close" src="../../img/icons/close.svg" id="closePopup" alt="close"/>
        </div>

        <div class="edit-task-content-info-container" style="margin-bottom: 20px;">
            <button class="edit-task-content-description-body-footer-save-button" id="createBoard"
                    style="display: flex; margin-left: 20px; margin-top: 0; max-width: 150px;">
                Создать доску
            </button>
        </div>
    </div>
</fest:template>
