<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <img class="add-collaborator__close" src="../../img/icons/close.svg" id="memberInvitePopupClose" alt="close"/>

    <div class="invite-users" style="display: flex; width: 100%">
        <div class="add-collaborator__body">
            <div class="add-collaborator__title">
                Добавить пользователя
            </div>

            <div class="invite">
                <div class="invite-text">
                    Пригласить с помощью ссылки
                </div>
                <input class="invite-link" onClick="this.select();" value="https://tabutask.ru/board/bibabobibabo" readonly="readonly"/>
                <fest:value>json.sharedUrl</fest:value>
            </div>

            <div class="invite">
                <div class="invite-text">
                    Пригласить по имени пользователя
                </div>
                <div class="add-collaborator__input" id="memberInvitePopupName" data-placeholder="Введите имя пользователя" contenteditable="true"/>
            </div>


            <button class="add-collaborator__button" id="memberInvitePopupAdd">Добавить</button>
        </div>
    </div>
</fest:template>
