<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="card" id="{json.cardHtmlID}" data-order="{json.order}">

        <div class="card-name">
            <div class="card-name__text" id="{json.cardNameID}" contenteditable="true">
                <fest:value>json.cardName</fest:value>
            </div>
            <img class="card-name__dots" src="../../img/icons/bin_w.svg" id="{json.cardSettingsID}" title="Удалить колонку" alt="dots"/>
        </div>

        <div class="card-content" id="{json.tasksDiv}">
            <fest:for iterate="json.tasks" index="i" value="v">
                <fest:include context="v" src="../Task/Task.tmpl.xml"/>
            </fest:for>
        </div>

        <div class="card-content-add-new-task" id="{json.addTaskID}" >
            <img class="card-content-add-new-task__icon" src="../../img/icons/add.svg" alt="add new task"/>
            <div class="card-content-add-new-task__text">
                Добавить задачу
            </div>
        </div>

    </div>
</fest:template>
