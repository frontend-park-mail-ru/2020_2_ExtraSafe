<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <img class="edit-tags__close" src="../../img/icons/close.svg" id="closeTagPopup" alt="close"/>

    <div class="edit-tags-add">
        <div class="edit-tags-add__title">
            Добавить метку
        </div>

        <div class="edit-tags-add-tags">
            <fest:for iterate="json.tags" index="i" value="v">
                <div class="edit-tags-add-tag__line" id="{v.tagHtmlID}">
                    <div id="{v.tagBodyHtmlID}" style="background: {v.tagColor}">
                        <fest:attributes>
                            <fest:if test="v.isSelected">
                                <fest:attribute name="class">
                                    edit-tags-add-tag edit-tags__selected
                                </fest:attribute>
                            </fest:if>
                            <fest:attribute name="class">
                                edit-tags-add-tag
                            </fest:attribute>
                        </fest:attributes>
                        <div class="edit-tags-add-tag__name">
                            <fest:value>v.tagName</fest:value>
                        </div>

                        <img class="edit-tags__selected-icon" src="../../img/icons/selected.svg" id="{v.tagCheckID}"
                             alt="selected_tag">
                            <fest:attributes>
                                <fest:if test="v.isSelected">
                                    <fest:attribute name="style">
                                        display: flex
                                    </fest:attribute>
                                </fest:if>
                            </fest:attributes>
                        </img>
                    </div>

                    <img class="edit-tags-add__pen-icon" src="../../img/icons/edit_tag.svg" id="{v.tagEditID}" alt="edit_tag"/>
                </div>
            </fest:for>
        </div>

        <div class="edit-tags-add-new" id="createTag">
            <img class="edit-tags-add-new__icon" src="../../img/icons/add.svg" alt="add"/>

            <div class="edit-tags-add-new__text">
                Создать метку
            </div>
        </div>

    </div>
</fest:template>
