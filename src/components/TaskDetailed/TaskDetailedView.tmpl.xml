<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="edit-task__content__container">

        <img class="edit-task__close" src="../../img/icons/close.svg" id="closeTask" alt="close"/>

        <div class="edit-task__content__name__container">
            <div class="edit-task__content__name__text" id="taskName" contenteditable="true">
                <fest:value>json.taskName</fest:value>
            </div>
        </div>

        <div class="edit-task__content__info__container">

            <img class="edit-task__content__delete__icon" src="../../img/icons/bin.svg" id="deleteTask" alt="delete task"/>

            <div class="edit-task__content__info">
                <div class="edit-task__content__info__collaborator__container ">
                    <div class="edit-task__content__info__title">
                        Участники
                    </div>

                    <div class="edit-task__content__info__elements">
                        <img src="../../img/egor.jpg" class="edit-task__content__info__collaborator" alt="collaborator"/>
                        <img src="../../img/icons/add_collaborator.svg" class="edit-task__content__info__elements__add-new__icon"
                             alt="add new collaborator"/>
                    </div>
                </div>

                <div class="edit-task__content__info__tag__container">
                    <div class="edit-tags__container" id="tagPopup"/>

                    <div class="edit-task__content__info__title">
                        Метки
                    </div>

                    <div class="edit-task__content__info__elements">
                        <div id="tagsDetailedDiv" style="display: flex">
                            <fest:for iterate="json.tags" index="i" value="v">
                                <fest:include context="v" src="./TagDetailed.tmpl.xml"/>
                            </fest:for>
                        </div>

                        <img src="../../img/icons/add_tag.svg" class="edit-task__content__info__elements__add-new__icon"
                             id="addTag" alt="add new tag"/>
                    </div>
                </div>

            </div>

            <div class="edit-task__content__description__container">
                <div class="edit-task__content__description__title">
                    Описание
                </div>

                <div class="edit-task__content__description__body">
                    <div class="edit-task__content__description__body__text" id="taskDescription" contenteditable="true">
                        <fest:value>json.taskDescription</fest:value>
                    </div>
                    <div class="edit-task__content__description__body__footer">
                        <button class="edit-task__content__description__body__footer__save-button" id="saveTaskDescription">
                            Сохранить
                        </button>
                    </div>
                </div>
            </div>

            <div class="edit-task__content__attachments__container">
                <div class="edit-task__content__attachments__title">
                    Вложения
                </div>

                <div class="edit-task__content__attachments__body">

                    <div class="edit-task__content__attachments__body__element">
                        <div class="edit-task__content__attachments__body__element__left">
                            <img class="edit-task__content__attachments__body__element__left__icon" src="../../img/icons/file.svg" alt="remove"/>

                            <div class="edit-task__content__attachments__body__element__left__text">
                                Название файла
                            </div>
                        </div>

                        <div class="edit-task__content__attachments__body__element__right">
                            <img class="edit-task__content__attachments__body__element__right__icon" src="../../img/icons/remove.svg" alt="remove"/>
                        </div>
                    </div>

                    <div class="edit-task__content__attachments__body__element">
                        <div class="edit-task__content__attachments__body__element__left">
                            <img class="edit-task__content__attachments__body__element__left__icon" src="../../img/icons/file.svg" alt="remove"/>

                            <div class="edit-task__content__attachments__body__element__left__text">
                                Название файла
                            </div>
                        </div>

                        <div class="edit-task__content__attachments__body__element__right">
                            <img class="edit-task__content__attachments__body__element__right__icon" src="../../img/icons/remove.svg" alt="remove"/>
                        </div>
                    </div>

                    <div class="edit-task__content__attachments__body__element">
                        <div class="edit-task__content__attachments__body__element__left">
                            <img class="edit-task__content__attachments__body__element__left__icon" src="../../img/icons/file.svg" alt="remove"/>

                            <div class="edit-task__content__attachments__body__element__left__text">
                                Название файла
                            </div>
                        </div>

                        <div class="edit-task__content__attachments__body__element__right">
                            <img class="edit-task__content__attachments__body__element__right__icon" src="../../img/icons/remove.svg" alt="remove"/>
                        </div>
                    </div>

                    <div class="edit-task__content__attachments__add-new__container">
                        <img class="edit-task__content__attachments__add-new__icon" src="../../img/icons/add.svg" alt="add"/>

                        <div class="edit-task__content__attachments__add-new__text">
                            Загрузить новый файл
                        </div>
                    </div>
                </div>
            </div>

            <div class="edit-task__content__check-lists__container">
                <div class="edit-task__content__check-lists__title__container">
                    <div class="edit-task__content__check-lists__title">
                        Чек-лист
                    </div>

                    <div class="edit-task__content__check-lists__delete">
                        Удалить
                    </div>
                </div>

                <div class="edit-task__content__check-lists__body">
                    <div class="edit-check-lists__container">
                        <div class="edit-check-lists__body">
                            <img class="edit-check-lists__close" src="../../img/icons/close.svg" alt="close"/>
                            <div class="edit-check-lists__title">
                                Создать чек-лист
                            </div>

                            <input class="edit-check-lists__name" placeholder="Чек-лист"/>

                            <button class="edit-check-lists__button"> Создать </button>
                        </div>
                    </div>

                    <div class="edit-task__content__check-lists__body__element">
                        <img class="edit-task__content__check-lists__body__element__icon" src="../../img/icons/check_grey.svg" alt="check"/>

                        <div class="edit-task__content__check-lists__body__element__text" contenteditable="true">
                            Быть молодцом
                        </div>
                    </div>

                    <div class="edit-task__content__check-lists__body__element">
                        <img class="edit-task__content__check-lists__body__element__icon" src="../../img/icons/box_unchecked.svg" alt="unchecked"/>

                        <div class="edit-task__content__check-lists__body__element__text" contenteditable="true">
                            Сделай-ка это
                        </div>
                    </div>

                    <div class="edit-task__content__check-lists__body__element">
                        <img class="edit-task__content__check-lists__body__element__icon" src="../../img/icons/box_unchecked.svg" alt="unchecked"/>

                        <div class="edit-task__content__check-lists__body__element__text" contenteditable="true">
                            Потом еще это
                        </div>
                    </div>

                    <div class="edit-task__content__check-lists__body__element">
                        <img class="edit-task__content__check-lists__body__element__icon" src="../../img/icons/box_unchecked.svg" alt="unchecked"/>

                        <div class="edit-task__content__check-lists__body__element__text" contenteditable="true">
                            И это не забудь
                        </div>
                    </div>

                    <div class="edit-task__content__check-lists__body__element__add-new__container">
                        <img class="edit-task__content__check-lists__body__element__add-new__icon" src="../../img/icons/add.svg" alt="add"/>

                        <div class="edit-task__content__check-lists__body__element__add-new__text">
                            Добавить элемент
                        </div>
                    </div>
                </div>

                <div class="edit-task__content__check-lists__add-new__container">
                    <img class="edit-task__content__check-lists__add-new__icon" src="../../img/icons/add.svg" alt="add"/>

                    <div class="edit-task__content__check-lists__add-new__text">
                        Создать чек-лист
                    </div>
                </div>

            </div>


        </div>

    </div>
</fest:template>
