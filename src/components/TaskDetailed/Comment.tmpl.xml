<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="edit-task-content-comments-body-comment" id="{json.commentHtmlID}">
        <img class="edit-task-content-comments-body-comment__collaborator" src="{json.commentAvatar}" alt="author"/>

        <div class="edit-task-content-comments-body-comment-right">
            <div class="edit-task-content-comments-body-comment-right-header">
                <div class="edit-task-content-comments-body-comment-right-header__name">
                    <fest:value>json.commentUsername</fest:value>
                </div>

                <div class="edit-task-content-comments-body-comment-right-header__delete" id="{json.commentRemove}">
                    <fest:attributes>
                        <fest:if test="json.isMine">
                            <fest:attribute name="style">
                                display: flex
                            </fest:attribute>
                        </fest:if>
                    </fest:attributes>
                    Удалить
                </div>
            </div>

            <div class="edit-task-content-comments-body-comment-right__text">
                <fest:value>json.commentText</fest:value>
            </div>
        </div>
    </div>
</fest:template>
