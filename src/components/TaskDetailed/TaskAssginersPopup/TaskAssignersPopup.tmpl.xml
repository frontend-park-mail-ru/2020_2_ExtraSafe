<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <img class="edit-add-collaborator__close" src="../../img/icons/close.svg" id="taskAssignersPopupClose" alt="close"/>

    <div class="board-users" style="display: flex; width: 100%">
        <div class="edit-add-collaborator-body" id="taskAssignersPopupDiv">
            <div class="edit-add-collaborator__title">
                Участники
            </div>

            <fest:for iterate="json.users" index="i" value="v">
                <div class="edit-add-collaborator-element" id="{v.memberTaskPopupHtmlID}">
                        <div class="edit-add-collaborator-left-side">
                            <img class="edit-add-collaborator-element__avatar" src="{v.memberAvatarSrc}"
                                 alt="user"/>

                            <div class="edit-add-collaborator-element__name">
                                <fest:value>v.memberUsername</fest:value>
                            </div>
                        </div>

                        <img class="edit-add-collaborator-element_selected"
                             src="../../img/icons/selected.svg" id="{v.memberTaskPopupCheckID}" alt="selected">
                            <fest:attributes>
                                <fest:if test="v.isSelected">
                                    <fest:attribute name="style">
                                        display: flex
                                    </fest:attribute>
                                </fest:if>
                            </fest:attributes>
                        </img>
                </div>
            </fest:for>
        </div>
    </div>
</fest:template>
