<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <img class="edit-tags__close" src="../../img/icons/close.svg" id="closeTagPopup" alt="close"/>

    <div class="edit-tags-create">
        <div class="edit-tags-create__title">
            <fest:value>json.titleText</fest:value>
        </div>

        <input class="edit-tags-create-tag__name" id="tagName" placeholder="Введите название метки" value="{json.tagName}"/>

        <div class="edit-tags-create-tag">
            <fest:for iterate="json.newTags" index="i" value="v">
                <div id="tagColor{i}" style="background: {v.tagColor}">
                    <fest:attributes>
                        <fest:if test="v.isSelected">
                            <fest:attribute name="class">
                                edit-tags-create-tag__color edit-tags__selected
                            </fest:attribute>
                        </fest:if>
                        <fest:attribute name="class">
                            edit-tags-create-tag__color
                        </fest:attribute>
                    </fest:attributes>
                    <img class="edit-tags__selected-icon-color" src="../../img/icons/selected.svg"
                         id="tagCheck{i}" alt="selected_tag">
                        <fest:attributes>
                            <fest:if test="v.isSelected">
                                <fest:attribute name="style">
                                    display: flex
                                </fest:attribute>
                            </fest:if>
                        </fest:attributes>
                    </img>

                </div>
            </fest:for>
        </div>

        <button class="edit-tags-create__button" id="createTag">
            <fest:value>json.buttonText</fest:value>
        </button>

    </div>
</fest:template>
