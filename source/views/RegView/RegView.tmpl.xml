        <form class="reg-form" onsubmit="updateAllErrors(); return false">
            <div>Регистрация аккаунта</div>
            <fest:include context="json.emailInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
            <fest:include context="json.usernameInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
            <fest:include context="json.passwordInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
            <fest:include context="json.signUpButton" src="../../components/SubmitButton/SubmitButton.tmpl.xml"/>
            <a class="login-reg-a" href="/login">Уже есть аккаунт? Войти!</a>
        </form>
    </div>
</fest:template>
