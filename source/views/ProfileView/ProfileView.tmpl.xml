<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="default-container">
        <div class="profile-form" onsubmit="return false">
            <div class="navigation">
                <div class="active-profile-nav">Профиль</div>
                <!--<div class="profile-nav">Внешний вид</div>-->
                <a class="profile-nav" href="/accounts">Аккаунты</a>
                <a class="profile-nav" href="/security">Безопасность</a>
                <!--<a class="profile-nav">Уведомления</a>-->
            </div>

            <form id="profileForm" class="settings-body" onsubmit="return false">
                <label for="imageInput">
                    <img id="profileAvatar" src="" class="avatar" alt="avatar"/>
                    <div id="profileAvatarError" class="profile-avatar-error" hidden="true"/>
                </label>
                <input id="imageInput" style="display: none" type="file" accept="image/jpeg,image/png"/>

                <div class="settings-input-container">
                    <fest:include context="json.usernameInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
                    <fest:include context="json.fullNameInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
                    <fest:include context="json.emailInput" src="../../components/NamedInput/NamedInput.tmpl.xml"/>
                </div>
                <fest:include context="json.submitButton" src="../../components/SubmitButton/SubmitButton.tmpl.xml"/>
            </form>
            <img data-href="/" src="../../img/close.svg" class="close" alt="close"/>
        </div>
    </div>
</fest:template>
